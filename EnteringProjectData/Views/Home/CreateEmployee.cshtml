@{
    ViewBag.Title = "Create Employee";
}
@model EnteringProjectData.Data.Models.Employee
<div class="row">
    <form asp-action="CreateEmployee" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="FirstName">First name:</label>
            <div class="col-md-5">
                <input asp-for="FirstName" class="form-control-color"/>
                <span asp-asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SecondName">Second name:</label>
            <div class="col-md-5">
                <input asp-for="SecondName" class="form-control-color" />
                <span asp-asp-validation-for="SecondName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Patronymic">Patronymic:</label>
            <div class="col-md-5">
                <input asp-for="Patronymic" class="form-control-color" />
                <span asp-asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <div class="col-md-5">
                <input asp-for="Email" class="form-control-color" />
                <span asp-asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-danger" type="submit" value="Create employee"/>
    </form>
</div>
