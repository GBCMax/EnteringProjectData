@{
    ViewBag.Title = "Change employee";
}
@model EnteringProjectData.Data.Models.Employee
<div class="row">
    <form asp-action="ChangeEmployee" class="form-horizontal" asp-route-id="@Model.EmployeeID">
        <div class="form-group">
            <label asp-for="FirstName">FirstName</label>
            <div class="col-md-5">
                <input asp-for="FirstName" class="form-control-color" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SecondName">SecondName</label>
            <div class="col-md-5">
                <input asp-for="SecondName" class="form-control-color" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Patronymic">Patronymic</label>
            <div class="col-md-5">
                <input asp-for="Patronymic" class="form-control-color" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <div class="col-md-5">
                <input asp-for="Email" class="form-control-color" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <form>
            <label>Проекты:</label>
            <select name="projectID">
                @if (Model.Projects.Count > 0)
                    @foreach (var comp in Model.Projects)
                    {
                        <option value="@comp.ProjectId">@comp.ProjectName</option>
                    }
                else
                {
                    <option>Не состоит в проектах</option>
                }
            </select>
            @* <input class="btn btn-danger" type="submit" value="Delete" /> *@
            @* <input asp-for="@Model.Employees" class="btn btn-danger" type="submit" value="Add" asp-action="AddEmployeeInProject" asp-route-id="@Model.ProjectId"/> *@
        </form>
    </form>
</div>