@{
    ViewBag.Title = "Change employee";
}
@model EnteringProjectData.Data.Models.Employee
<div class="container mt-4">
    <form asp-action="ChangeEmployee" class="form-horizontal" asp-route-id="@Model.EmployeeID">
        <div class="form-group row">
            <label for="FirstName" class="col-md-2 col-form-label">First name:</label>
            <div class="col-md-5">
                <input asp-for="FirstName" class="form-control" id="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="SecondName" class="col-md-2 col-form-label">Second name:</label>
            <div class="col-md-5">
                <input asp-for="SecondName" class="form-control" id="SecondName" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Patronymic" class="col-md-2 col-form-label">Patronymic:</label>
            <div class="col-md-5">
                <input asp-for="Patronymic" class="form-control" id="Patronymic" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Email" class="col-md-2 col-form-label">Email:</label>
            <div class="col-md-5">
                <input asp-for="Email" class="form-control" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Works on:</label>
            <div class="col-md-5">
                @if (Model.EmployeeProjects != null && Model.EmployeeProjects.Count > 0)
                {
                    @foreach (var v in Model.EmployeeProjects)
                    {
                        <div class="col-md-5">
                            <label class="form-check-label">
                                @v.Project.ProjectName
                            </label>
                        </div>
                    }
                }
                else
                {
                    <span>Empty</span>
                }
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <button type="submit" class="btn btn-danger">Change employee</button>
            </div>
        </div>
        <input type="hidden" asp-for="EmployeeID" />
    </form>
</div>

@section Footer {
    <footer class="footer mt-auto py-3">
        <div>
            <span class="text-muted">Copyright© Eliseev Maksim, @DateTime.Now.Year. All rights reserved</span>
        </div>
    </footer>
}
